<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_margin="@dimen/layout_page_padding"
     app:cardElevation="4dp"
     app:cardBackgroundColor="@color/spin_color"
     app:cardCornerRadius="8dp">

    <ImageView
         android:layout_height="@dimen/tile_act_high"
         android:layout_width="match_parent"
         android:scaleType="centerCrop"
         android:id="@+id/imageView" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:padding="@dimen/layout_page_rl"
         android:background="@drawable/card_bg_black"
         android:layout_marginTop="@dimen/set_button_size_high"
         android:layout_gravity="bottom">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:fontFamily="@font/din1451alt"
             android:textSize="@dimen/medium_page_text_sizes"
             android:textColor="@color/apple_switch_track_color"
             android:id="@+id/textView"
             android:layout_gravity="center_vertical" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:fontFamily="@font/small_round"
             android:textSize="@dimen/mediumsmall_page_text_sizes"
             android:textColor="@color/bilibili_pink"
             android:id="@+id/tiledview"
             android:layout_gravity="center_vertical"
             android:text="None" />

    </LinearLayout>

</androidx.cardview.widget.CardView>