<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/layout_page_padding"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/primary_material_light"
    app:cardCornerRadius="8dp">

    <ImageView
        android:layout_height="@dimen/tile_act_high"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/appicon" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/layout_page_padding_all"
        android:layout_marginRight="@dimen/set_button_size_high"
        android:layout_gravity="bottom">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/din1451alt"
            android:textSize="@dimen/medium_page_text_sizes"
            android:textColor="@color/primary_material_dark"
            android:id="@+id/use_step_t"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/linux_xin_zzh"
            android:textSize="@dimen/mediumsmall_page_text_sizes"
            android:textColor="@color/apple_switch_track_color"
            android:id="@+id/use_launcehr_step"
            android:layout_gravity="center_vertical"
            android:text="None" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
