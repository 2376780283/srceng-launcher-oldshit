<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:gravity="center"
     android:background="@color/Main_background"
     android:orientation="vertical"
     android:layout_gravity="center">

    <ImageView
         android:layout_height="@dimen/tile_act_high"
         android:layout_width="@dimen/tile_act_high"
         android:src="@drawable/ic_launcher"
         android:layout_gravity="center" />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:textSize="@dimen/start_button_text_start"
         android:fontFamily="@font/din1451alt"
         android:textColor="@color/white"
         android:layout_marginTop="@dimen/layout_page_padding_all"
         android:layout_gravity="center"
         android:text="@string/app_name" />

</LinearLayout>